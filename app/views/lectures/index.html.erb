<div class="row align-items-center text-center bg-danger rounded m-2">
    <div class="col-6">
        <h1 class="text-start">Lectures</h1>
    </div>
    <div class="col-6 text-end">
        <%= link_to "Back to Dashboard", dashboards_path, class: "btn btn-secondary" %>
    </div>     
</div>
<div class="container-fluid table-responsive">
<table class="table table-primary table-striped table-hover table-bordered align-middle">
    <thead>
        <tr>
            <td>Grade</td>
            <td>Subject</td>
            <td>Lecture Name</td>
        </tr>
    </thead>
    <tbody class="table-group-divider">
    <%  @lecture_table_data.each do |lecture| %>
        <tr>
            <td><%= lecture[:grade] %> </td>
            <td><%= lecture[:subject] %> </td>
            <td><%= lecture[:name] %> </td>
        </tr>
    <% end %>
    </tbody>
</table>
</div>
